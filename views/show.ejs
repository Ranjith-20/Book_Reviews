<div class="layout">
          <%- include ('partials/header') %>

                    <div class="hero_show">

                              <div class="hero__text">
                                        <h2 class="card__author">
                                                  Author: <%= review.author %>
                                        </h2>
                                        <h2 class="card__title">
                                                  Title: <%= review.title %>
                                        </h2>
                                        <h3 class="card__summary">
                                                  Summary: <%= review.summary %>
                                        </h3>
                              </div>
                              <div class="container-btn">
                                        <div class="btn-group1">
